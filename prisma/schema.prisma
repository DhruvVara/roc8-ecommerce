// User model
model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  password   String
  verified   Boolean    @default(false)
  otp        String?
  categories Category[] // Relation to categories
}

// Category model
model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[] // Relation to users
}
